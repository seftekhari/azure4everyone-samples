{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storages": {
            "type": "array",
            "defaultValue": [
                "contoso",
                "fabrikam",
                "demo"
            ]
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts", 
            "apiVersion": "2019-06-01",
            "name": "[concat('stg', uniqueString(resourceGroup().id), parameters('storages')[copyIndex('copystorage')])]",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "copy": {
                "name": "copystorage",
                "count": "[length(parameters('storages'))]"
            }
        }
    ],
    "outputs": {},
    "functions": []
}
